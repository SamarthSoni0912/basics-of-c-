https://leetcode.com/problems/power-of-two/

class Solution {
public:
    bool isPowerOfTwo(int n) {
        int i=0;
        if(n==0){
            return false;
        }
        while(n!=0){
            if(n==1){
                return true;
            }
            if(n%2==0){
                n=n/2;
            }
            else{
                return false;
            }
        }
        return true;
    }
};
